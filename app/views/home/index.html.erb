<% @deploy_statuses.each do |environment| %>

  <h2>
  <% case environment.env
     when 'prod' %>
       Production
  <% when 'staging' %>
       Staging
  <% when 'int' %>
       Agency integration
  <% when 'qa' %>
       Quality assurance
  <% when 'dev' %>
       Development
  <% end %>
  </h2>
<!--removed icons not in design system ðŸ’š ðŸ’” ðŸš« -->
  <% environment.statuses.each do |status| %>
    <div>
      <% if status.status_class == 'deploy-success' %>
        
        <%= image_tag '/assets/img/alerts/success.svg', alt: 'success', style: 'height:27px;width:27px;' %>
        
      <% elsif status.status_class == 'deploy-error' %>

        <%= image_tag '/assets/img/alerts/error.svg', alt: 'error', style: 'height:27px;width:27px;' %>

      <% elsif status.status_class == 'disabled' %>
         
       <%= image_tag '/assets/img/alerts/warning.svg', alt: 'disabled', style: 'height:27px;width:27px;' %>
      <% end %>

      <% if status.host %>
        <%= link_to status.short_name, status.host %> â€”
      <% else %>
        <%= status.short_name %> â€”
      <% end %>

      <% if status.error %>
        <%= status.error %>
      <% else %>
        <%= status.branch %> @ <%= link_to status.short_sha, status.commit_url %> â€”
        <%= t 'home.deployed_by_html',
            time: time_ago_in_words(status.timestamp),
            href: link_to(t('links.pending_changes'), status.pending_url) %>
      <% end %>
    </div>
  <% end %>

<% end %>
