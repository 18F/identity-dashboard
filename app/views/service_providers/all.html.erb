
<div class="usa-display">Apps</div>

<%= button_to t('forms.buttons.trigger_idp_refresh'), api_service_providers_path, method: :post, :class => "usa-button" %>


<table class="usa-table">
  <thead>
    <tr>
      <th scope="col">Friendly name</th>
      <th scope="col">Issuer</th>
      <th scope="col">IAL</th>
      <th scope="col">Active</th>
      <th scope="col">Cert Exp</th>
      <th scope="col">Created</th>
      <th scope="col">In Production</th>
    </tr>
  </thead>
  <tbody>
    <% @service_providers.each do |app| %>
    <tr>
      <th scope="row">
      <%= link_to(app.friendly_name, service_provider_path(app), class: 'usa-link') %>
      </th>
      <td class="text-wrap"><%= app.issuer %></td>
      <td><%= app.ial_friendly %></td>
      <td><%= image_tag app.active? ? 'img/alerts/success.svg' : 'img/alerts/error.svg', height: '27', width: '27' %></td>
      <%= render partial: 'certificate_expiration_td', locals: { app: app } %>
      <td><%= app.created_at.localtime.strftime("%F %T") %></td>
      <td><%= image_tag app.production_issuer.present? ? 'img/alerts/success.svg' : 'img/alerts/error.svg', height: '27', width: '27'  %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<div class="grid-row border-y-1px border-primary-light padding-105">
  <div class="desktop:grid-col-6 tablet:grid-col-6 mobile:grid-col-12">
      <a class="prose usa-link text-bold text-no-underline line-height-sans-1" href="#">Copyright.gov - Digital Millennium Copyright Act Test Portal</a>
      <br>
      <P class="margin-0 text-base"><span class="text-bold">Client ID: </span>urn:gov:gsa:openidconnect.profiles:sp:sso:loc:dmca_osp</P>
</div>
 
  <div class="desktop:grid-col-6 tablet:grid-col-6 mobile:grid-col-12">
    <p class="font-sans-3xs display-flex row-reverse-tablet text-align-right-tablet text-base-dark">
    Created on April 15,2020 <br class="hidden-tablet"><span class="hidden-mobile">  |  </span>Certificate expires April 15,2021</p>
    <span class="display-flex row-reverse-tablet">
      <span class="usa-tag bg-info-light text-black">IAL1</span>
      <span class="usa-tag text-black bg-success-lighter">Sandbox</span>
      <span class="usa-tag text-black bg-error-light">Disabled</span>
    </span>
  </div>
</div>
