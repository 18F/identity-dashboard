<div class="usa-display">My teams</div>

<div>
  <% if @teams.count > 0 %>
    <%=
      button_to(
          t('headings.teams.new_team'),
          new_team_path,
          method: :get,
          class: "usa-button margin-top-4 margin-bottom-4",
          ) if can_create_teams? (current_user)
    %>
    <%= render 'teams_list' %>
  <% else %>
    <%= render "teams/no_teams" %>
  <% end %>
</div>
