<div class="usa-display">Teams</div>
<%= button_to t('headings.teams.new_team'), new_team_path, method: :get, :class => "usa-button" if current_user&.admin? %>

<table class="usa-table-borderless teams">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Agency</th>
      <th scope="col">Description</th>
      <th scope="col">Apps</th>
      <th scope="col">Users</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <% if current_user&.admin? || team.users.include?(current_user) %>
          <th scope="row"><%= team.name %></th>
          <td><%= team&.agency&.name %></td>
          <td class="text-wrap"><%= team.description %></td>
          <td>
            <% team.service_providers.each do |sp| %>
              <%= link_to sp.friendly_name, service_provider_path(sp), :class => 'usa-link' %><%= "<br><hr>".html_safe unless sp == team.service_providers.last %>
            <% end %>
          </td>
          <td>
            <% team.users.each do |user| %>
              <a href="<%= edit_user_path(user.id) %>" class="usa-link"><%= user.email %></a><br>
            <% end %>
          </td>
          <td class="text-wrap">
            <%= link_to 'view', team_path(team), :class => 'usa-link' %><br>
            <%= link_to 'edit', edit_team_path(team), :class => 'usa-link' %><br>
            <%= link_to 'delete', team_path(team), method: :delete, data: { confirm: 'Are you sure you want to delete this team?' }, :class => 'usa-link' if current_user.admin? %>
          </td>
        <% end %>
      <% end %>
  </tbody>
</table>
