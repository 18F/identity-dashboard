<div class="usa-overlay"></div>
<div class="usa-header usa-header--basic">
  <div class="usa-nav-container tablet:border-bottom tablet:border-base-lighter">
    <div class="usa-navbar">
      <div class="usa-logo margin-top-2 margin-bottom-1">
        <a href="/" aria-label="<%= IdentityConfig.store.prod_like_env ? 'Login.gov Parner Portal Production' : 'Login.gov Parner Portal Sandbox' %>">
          <%= image_tag 'LG-PP-Sandbox.svg', alt: 'Login.gov Parner Portal Sandbox', role: 'img', class: 'usa-logo__img' unless IdentityConfig.store.prod_like_env %>
          <%= image_tag 'LG-PP-Production.svg', alt: 'Login.gov Parner Portal Production', role: 'img', class: 'usa-logo__img' if IdentityConfig.store.prod_like_env %>
        </a>
      </div>
      <% if user_signed_in? %>
        <button class="usa-menu-btn">Menu</button>
      <% end %>
    </div>

    <% if user_signed_in? %>
      <nav aria-label="Primary navigation" class="usa-nav">
        <div class="usa-nav__inner">
          <button class="usa-nav__close">
            <svg class="usa-icon usa-icon--size-3" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true">
              <use xlink:href="<%= asset_path 'sprite.svg#close' %>"></use>
            </svg>
          </button>
          <ul class="usa-nav__primary usa-accordion">
            <li class="usa-nav__primary-item">
              <%= navigation_link_to 'Configurations', service_providers_path %>
            </li>
            <li class="usa-nav__primary-item">
              <%= navigation_link_to 'Teams', teams_path %>
            </li>
            <% if current_user.logingov_admin? %>
              <li class="usa-nav__primary-item">
                <%= navigation_link_to 'Security Events', security_events_path %>
              </li>
            <% end %>
            <li class="usa-nav__primary-item">
              <button
                type="button"
                class="usa-accordion__button usa-nav__link"
                aria-controls="unique-id-tools-dropdown"
                aria-expanded="false"
                >
                <span>Tools</span>
              </button>
              <ul id="unique-id-tools-dropdown" class="usa-nav__submenu">
                <li class="usa-nav__submenu-item">
                  <%= link_to 'SAML Request Validation', tools_saml_request_path %>
                </li>
              </ul>
            </li>

            <% if current_user.logingov_admin? %>
              <li class="usa-nav__primary-item">
                <button
                  type="button"
                  class="usa-accordion__button usa-nav__link"
                  aria-controls="unique-id-admin-dropdown"
                  aria-expanded="false">
                  <span>Admin</span>
                </button>
                <ul id="unique-id-admin-dropdown" class="usa-nav__submenu">
                  <li class="usa-nav__submenu-item">
                    <%= link_to 'All apps', service_providers_all_path %>
                  </li>
                  <li class="usa-nav__submenu-item">
                    <%= link_to 'Users', users_path %>
                  </li>
                  <li class="usa-nav__submenu-item">
                    <%= link_to 'All teams', teams_all_path %>
                  </li>
                  <li class="usa-nav__submenu-item">
                    <%= link_to 'All security events', security_events_all_path %>
                  </li>
                  <li class="usa-nav__submenu-item">
                    <%= link_to 'Banner messages', banners_path %>
                  </li>
                  <li class="usa-nav__submenu-item">
                    <%= link_to 'Your API auth token', auth_tokens_path %>
                  </li>
                  <li class="usa-nav__submenu-item">
                    <%= link_to 'Deleted apps', service_providers_deleted_path %>
                  </li>
                  <li class="usa-nav__submenu-item">
                    <%= link_to 'User permissions report', internal_reports_user_permissions_path(format: 'csv') %>
                  </li>
                  <% if !IdentityConfig.store.prod_like_env %>
                    <li class="usa-nav__submenu-item">
                      <%= link_to 'Configuration extraction', extracts_path %>
                    </li>
                    <li class="usa-nav__submenu-item">
                      <%= link_to 'Connect with Airtable', airtable_path %>
                    </li>
                  <% end %>
                </ul>
              </li>
            <% end %>
            <li class="usa-nav__primary-item">
              <a class="usa-nav__link" href="<%= destroy_user_session_path %>">
                <span><%= t('links.sign_out') %></span>
              </a>
            </li>
          </ul>
        </div>
      </nav>
    <% end %>
  </div>
</div>
