<%# expected locals:
  [SimpleForm] form
  [String] fieldname such that simple_form and service_provider have valid translations
  [Symbol] db_fieldname such that the database has an associated column
  [String] value to pre-select radio option
%>
<%= text_field_tag "wizard_step[#{db_fieldname}][]",
                   value,
                   id: "",
                   class: 'usa-input',
                   multiple: 'multiple',
                   aria: { labelledby: fieldname.gsub('.','_') }%>
<% @model.errors.each do |error| %>
  <% if Regexp.new("#{db_fieldname.to_s.gsub('_',' ')}.+#{value} is",'i') =~ error.full_message %>
    <p class="usa-error-message"><%= error.full_message %></p>
  <% end %>
<% end %>
