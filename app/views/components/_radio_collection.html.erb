<%# expected locals:
  @param form [SimpleForm]
  @param describedby [String] a proper value for `aria-describedby`
  @param db_fieldname [Symbol] such that the database has an associated column
  @param inputs [Hash] hash where key is the label and value is the input value
  @param default [String] to pre-select radio option
%>
<ul class="usa-input-list" aria-describedby="<%= describedby %>">
  <%= form.collection_radio_buttons(db_fieldname,
                                    inputs,
                                    :last, :first,
                                    item_wrapper_tag: :li,
                                    checked: default) do |b| %>
    <%= b.radio_button(class: "usa-radio__input") %>
    <%= b.label(class: "usa-radio__label") %>
  <% end %>
</ul>
