<div class="form-fields">

<%= form.input :name, label: "<b>Name</b>".html_safe %>
<%= form.input :agency_id,
               as: :collection_select,
               collection: @agencies,
               label: "<b>Agency</b><br>The federal agency you would like this group to be assigned to.<p>#{ extra_message }".html_safe,
               required: agency_required %>
<%= form.input :description, label: "<b>Description</b>".html_safe %>
<fieldset class="usa-fieldset-inputs">
  <legend class="mb1">Users</legend>
  <%= collection_check_boxes(:group,
      :user_ids,
      User.all.sorted, :id, :email) do |b| %>
      <%= b.check_box %>
      <%= b.label %>
  <% end %>
</fieldset>

</div>
