 	<%= button_to t('headings.users.new_user'), new_user_path, method: :get, :class => "usa-button" %>

<table class="usa-table-borderless">
  <thead>
    <tr>
      <th scope="col">Email</th>
      <th scope="col">Signed in</th>
      <th scope="col">Admin</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <th scope="row"><%= user.email %></th>
      <td><%= image_tag user.uuid? ? '/assets/img/alerts/success.svg' : '/assets/img/alerts/error.svg', style: 'height:27px;width:27px;' %></td>
      <td><%= image_tag '/assets/img/illustrations/security-key.svg', style: 'height:27px;width:27px;' if user.admin? %></td>
      <td><%= link_to 'edit', edit_user_path(user.id) %></td>

    </tr>
    <% end %>
  </tbody>
</table>
