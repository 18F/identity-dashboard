<fieldset class="usa-fieldset">
  <%= form.input :email,
      label: "<b>Email</b>".html_safe, label_html: { class: 'usa-label' }, input_html: { class: 'usa-input' }, required: true %>
    <legend class='usa-sr-only'>Make admin?</legend>
    <%= form.label :admin,
                   label: 'Make admin?',
                   class: 'usa-label' %>
    <%= form.collection_radio_buttons(:admin,
                                    { "Yes" => true, "No" => false },
                                    :last, :first,
                                    collection_wrapper_tag: :ul,
                                    collection_wrapper_class: 'usa-input-list',
                                    item_wrapper_tag: :li) do |b| %>
        <%=  b.radio_button(class: "usa-radio__input") %>
        <%=  b.label(class: "usa-radio__label")%>
    <% end %>
</fieldset>
