$font-path: 'fonts';
$image-path: 'img';

@import 'identity-style-guide/dist/assets/scss/styles';

@mixin text-wrap-mixin {
  word-break: break-all;
}
.text-wrap {
  @include text-wrap-mixin;
}

.input-file {
  width: 0.1px;
  height: 0.1px;
  opacity: 0;
  overflow: hidden;
  position: absolute;
  z-index: -1;
}
.file-input-button {
  float: left;
}

.input-preview {
  float: left;
  margin-top: 1.5rem;
  padding: 9px 20px;
}

.usa-label {
  color: map-get($site-palette, 'site-dark-grey');
}

.actions {
  display: flex;
  flex-wrap: wrap;

  form {
    margin-bottom: 1em;
  }
}

@media screen and (max-width: 375px) {
  .actions {
    form {
      flex-grow: 1;
    }
  }
}

.users {
  overflow-x: auto;

  .usa-table {
    margin-top: 0;
  }
}