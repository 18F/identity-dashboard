$font-path: 'fonts';
$image-path: 'img';

@import 'identity-style-guide/dist/assets/scss/styles';

@mixin text-wrap-mixin {
  word-break: break-all;
}
.text-wrap {
  @include text-wrap-mixin;
}

.input-file {
  width: 0.1px;
  height: 0.1px;
  opacity: 0;
  overflow: hidden;
  position: absolute;
  z-index: -1;
}
.file-input-button {
  float: left;
}

.input-preview {
  float: left;
  margin-top: 1.5rem;
  padding: 9px 20px;
}

.lg-card {
  h2 {
    margin-top: 0;
  }
}

.usa-label {
  color: map-get($site-palette, 'site-dark-grey');
}

.usa-alertx {
  margin-bottom: 1em;
}

.actions {
  display: flex;
  flex-wrap: wrap;

  form {
    margin-bottom: 1em;
  }
}

.users {
  overflow-x: auto;

  .usa-table {
    margin-top: 0;
  }
}

@media only screen and (max-width: 375px) {
  .usa-navbar .usa-logo {
    a {
      width: 148px;
    }

    .usa-logo__text {
      padding-left: 21px;
    }
  }

  .actions {
    form {
      flex-grow: 1;
    }
  }
}

// Override to get <summary> disclosure triangle to render correctly in Chrome
// This can be removed entirely after LG-3762 upgrades USWDS
.summary-fix {
  display: list-item !important;
}

.certificate-expired,
.usa-table td.certificate-expired {
  color: white;
  background: red;
}

.certificate-warning,
.usa-table td.certificate-warning {
  color: black;
  background: yellow;
}

.bold-definition {
  dt {
    font-weight: bold;
  }

  dd {
    margin: 0
  }
}

.border-underline {
 border-bottom: 1px solid color('base-lighter');
 width: 100%;
}

.spaced-definition {
  dd {
    padding-bottom: 0.5rem;
  }
}

.compact-definition {
  margin-top: 0;
  margin-bottom: 0;

  dt {
    display: inline;
    font-weight: bold;
  }

  dd {
    display: inline;
    margin: 0
  }

  dd::after {
    content: '';
    display: block;
  }
}

// Search overrides based on identity-site

.usa-search-input--joined-right {
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
  max-width: 12rem;
}

.text-heavy {
  font-weight: 800;
}

.versionHistory {
  padding-top: 15px;
  #versionToggle {
    &:after {
      padding-left: 10px;
    }
    &.open {
      &:after {
        content: 'üîΩ';
      }
    }
    &.closed {
      &:after {
        content: '‚ñ∂Ô∏è';
      }
    }
  }
  h3, h4, h5 {
    margin: 0;
  }
  #versions {
    display: none;
    .event {
      padding: 25px 0 25px 0;
      border-top: 1px solid #858585;
      &:first-of-type {
        border-top: none;
      }
      .event-history {
        margin-top: 5px;
        border: 1px solid #b3b3b3;
        width: 100%;
        td, th {
            border: 1px solid #b3b3b3;
            padding: 5px;
            width: 40%;
            &:first-of-type {
              width: 20%;
            }

        }
        border-collapse: collapse;
      }
    }
  }
}