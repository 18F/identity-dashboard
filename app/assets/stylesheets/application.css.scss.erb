$font-path: 'fonts';
$image-path: 'img';

@import 'identity-style-guide/dist/assets/scss/styles';

.usa-input-required:after {
    color: #981b1e;
    content: " (*<%= I18n.translate('simple_form.labels.required') %>)";
  }
@mixin text-wrap-mixin {
  word-break: break-all;
}
.text-wrap {
  @include text-wrap-mixin;
}
.hidden-tablet {
  display: block;
}
.hidden-mobile {
  display: none;
}
.row-reverse-tablet {
  flex-direction: row;
}
.text-align-right-tablet {
  text-align: left;
}
@media (min-width: 640px) {
  .hidden-tablet {
    display: none;
  }
  .row-reverse-tablet {
    flex-direction: row-reverse;
  }
  .text-align-right-tablet {
    text-align: right;
  }
}

@media (min-width: 959px) {
  .hidden-mobile {
    display: block;
  }
}
