$font-path: 'fonts';
$image-path: 'img';

@import 'identity-style-guide/dist/assets/scss/styles';

@mixin text-wrap-mixin {
  word-break: break-all;
}
.text-wrap {
  @include text-wrap-mixin;
}

.input-file {
  width: 0.1px;
  height: 0.1px;
  opacity: 0;
  overflow: hidden;
  position: absolute;
  z-index: -1;
}
.file-input-button {
  float: left;
}

.input-preview {
  float: left;
  margin-top: 1.5rem;
  padding: 9px 20px;
}

.lg-card {
  h2 {
    margin-top: 0;
  }
}

.usa-label {
  color: map-get($site-palette, 'site-dark-grey');
}

.usa-alertx {
  margin-bottom: 1em;
}

.usa-navbar .usa-logo {
  a {
    display: flex;
    flex-direction: column-reverse;
    height: 2.75em;
    width: 176px;
    background: url(../assets/img/login-gov-logo.svg) top center no-repeat;
    /* separating size for browsers that don't support size in shorthand */
    background-size: contain;
  }

  .usa-logo__text {
    padding-left: 26px;
  }
}

.actions {
  display: flex;
  flex-wrap: wrap;

  form {
    margin-bottom: 1em;
  }
}

.users {
  overflow-x: auto;

  .usa-table {
    margin-top: 0;
  }
}

@media only screen and (max-width: 375px) {
  .usa-navbar .usa-logo {
    a {
      width: 148px;
    }

    .usa-logo__text {
      padding-left: 21px;
    }
  }

  .actions {
    form {
      flex-grow: 1;
    }
  }
}

// Override to get <summary> disclosure triangle to render correctly in Chrome
// This can be removed entirely after LG-3762 upgrades USWDS
.summary-fix {
  display: list-item !important;
}

.certificate-expired,
.usa-table td.certificate-expired {
  color: white;
  background: red;
}

.certificate-warning,
.usa-table td.certificate-warning {
  color: black;
  background: yellow;
}

// Borrowed from identity-site
$navy: #112e51;
$white: #fff;

ol.number-list,
ul.help-question-list {
  list-style-type: none;
  margin-left: 0;
  padding-left: 0;

  > li {
    @include u-margin-y(1);
    @include u-position('relative');
    padding-left: 2.25rem;

    &::before {
      @include u-pin-top;
      @include u-pin-left;
      background-color: $navy;
      border-radius: 50%;
      color: $white;
      display: inline-block;
      font-weight: bold;
      height: 25px;
      line-height: 25px;
      text-align: center;
      width: 25px;
    }

    > ul {
      list-style-type: disc;
    }
  }

  p {
    // TODO: Remove once `$theme-body-line-height` is assigned as consistent with `$line-height`.
    position: relative;
    // $line-height-offset: round(
    //     ($line-height - line-height($theme-body-font-family, $theme-body-line-height)) * 100
    //   ) / 100 / -2;
    top: 0; //$line-height-offset;

    &:last-of-type {
      margin-bottom: 0; // $line-height-offset;
    }
  }
}

ul.help-question-list {
  li::before {
    content: '?';
  }
}

ol.number-list {
  counter-reset: num;

  > li {
    @include u-margin-y(2);
    counter-increment: num;

    &::before {
      content: counter(num);
    }
  }
}
